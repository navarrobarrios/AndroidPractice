<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="24dp"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_marginRight="24dp"
    tools:context="com.example.navarro.androidpractice.fragments.more_options_fragment.MoreOptionsFragment">

    <ImageView
        android:backgroundTint="#50000000"
        android:layout_marginRight="48dp"
        android:layout_gravity="center_vertical|right"
        android:background="@drawable/ic_feedback_black_24dp"
        android:layout_width="74dp"
        android:layout_height="74dp" />
    <TextView
        android:textStyle="bold"
        android:textColor="#50000000"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:text="On this moment not exist more options" />

</LinearLayout>
