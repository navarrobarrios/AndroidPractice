<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_margin="24dp"
    tools:context="com.example.navarro.androidpractice.fragments.firebase_service_fragment.FirebaseServiceFragment">

    <TextView
        android:id="@+id/fragment_firebase_username"
        android:text="username"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:textSize="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/fragment_firebase_password"
        android:text="password"
        android:layout_marginTop="8dp"
        android:textSize="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/fragment_firebase_name"
        android:text="name"
        android:layout_marginTop="8dp"
        android:textSize="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/fragment_firebase_lastname"
        android:text="lastname"
        android:layout_marginTop="8dp"
        android:textSize="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/fragment_firebase_age"
        android:text="age"
        android:layout_marginTop="8dp"
        android:textSize="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
